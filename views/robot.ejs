	    <label>gotoY</label>
	    <input type="number" id="gotoY">
	    <br>
	    <button onclick="start()">開始</button>
	    <button onclick="autoStart()">自動模式</button>
		<button onclick="openRobot()">多開9個</button>
		<button onclick="allAutoStart()">全部開啟自動模式</button>
	</p>
	<div id="goto"></div>
	<div id="index"></div>
    <script>
    	function running(){
		    setInterval(function(){
		    	var stop = false;
			  	lastX = nowX;
			  	lastY = nowY;
			  	console.log(cmdList);
		  		if(cmdList.length > 0){
		  			switch(cmdList.shift()){
				  		case "+x" : nowX++; break;
				  		case "-x" : nowX--; break;
				  		case "+y" : nowY++; break;
				  		case "-y" : nowY--; break;
				  		case "stop" : stop = true; break;
				  	}
			  	} else {
			  		stop = true;
			  	}
			  	if(stop){
			  		stopCount++;
			  	} else {
			  		stopCount = 0;
			  	}
			  	setAddress();
			  	if(nowX != gotoX || nowY != gotoY){
			  		if(lastX != nowX || lastY != nowY || stopCount > 2){
				  		eventId++;
				  		socket.emit('walk',
					  		{
					  			id : id,
					  			index : index,
					  			eventId : eventId
					  		}
				  		);
			  		}
			  	} else {
			  		if(auto){
			  			if(nowX == 0){
			        		gotoX = mapXLength - 1;
			        		gotoY = Math.floor(Math.random() * 10);
			        	}
			        	else if(nowX == mapXLength - 1){
			        		gotoX = 0;
			        		gotoY = Math.floor(Math.random() * 10);
			        	}
			        	else{
			        		gotoX = 0;
			        		gotoY = 0;
			        		console.log("!!!!!!!!!!!! : " + nowX);
			        	}
			        	$("#goto").html("<b>gotoX : " + gotoX + " gotoY : " + gotoY + "</b>");
			  			start(auto);
			  		}
			  	}
		    }, 2000);
    	}
    	
	    function setAddress(){
	        socket.emit('setAddress',
	        	{
	        		id : id,
	        	 	index : index,
	        		nowX : nowX,
	        	 	nowY : nowY,
	        	 	lastX : lastX,
	        	 	lastY : lastY
	        	}
	        );
	    };

	    function start(auto){
	    	if(!auto){
		    	nowX = parseInt($("#nowX").val());
		    	nowY = parseInt($("#nowY").val());
		    	gotoX = parseInt($("#gotoX").val());
		    	gotoY = parseInt($("#gotoY").val());
	    	}
	    	eventId++;
		    socket.emit('start',
		    	{
		    		id : id,
		    		index : index,
		    		nowX : nowX,
		    		nowY : nowY,
		    		gotoX : gotoX,
		    		gotoY : gotoY,
		    		eventId : eventId
		    	}
		    );
        };

        function autoStart(){
        	auto = true;
        	socket.emit('signUp',
	        	{
	        		id : id,
		    		nowX : nowX,
		    		nowY : nowY,
	        	}
	        );
	        running();
        };

