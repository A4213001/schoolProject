        function allAutoStart(){
			socket.emit('allAutoStart');
        }

		socket.on('returnIndex', function (data) {
        	index = data.index;
        	$("#index").html("<b>index : " + index + "</b>");
        	if(auto){
        		if(nowX == 0){
	        		gotoX = mapXLength - 1;
	        		gotoY = Math.floor(Math.random() * 4);
	        	}
	        	else if(nowX == mapXLength - 1){
