	        		gotoY = Math.floor(Math.random() * 4);
	        	}
	        	else{
	        		gotoX = 0;
	        		gotoY = 0;
	        		console.log("!!!!!!!!!!!! : " + nowX);
	        	}
	        	$("#goto").html("<b>gotoX : " + gotoX + " gotoY : " + gotoY + "</b>");
        	}
        	eventId++;
        	socket.emit('start',
	        	{
	        		id : id,
	        		index : index,
		    		nowX : nowX,
		    		nowY : nowY,
		    		gotoX : gotoX,
		    		gotoY : gotoY,
		    		eventId : eventId
	        	}
	        );
		});

		socket.on('cmd', function (data) {
			if(eventId == data.eventId){
				cmdList = data.cmd;
			} else {
				console.log("time out");
			}
		});

		socket.on('autoStart', function (data) {
        	autoStart();   
		});
	</script>
